{
  "compilerOptions": {
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "outDir": "dist",
    "lib": ["es2022", "dom"],
    "strict": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "typeRoots": ["./node_modules/@types", "./types" ],
  },
  "include": ["app.ts", "*.ts", "types/**/*.d.ts"]
}